{% extends "includes/layout.njk" %}

{% from "components/inputNumber/macro.njk" import inputNumber %}
{% from "components/pageTitle.njk" import pageTitle %}
{% from "components/form/macro.njk" import formHelper %}
{% from "components/button/macro.njk" import button %}
{% from "components/subheading/macro.njk" import subheading %}

{% block pageTitle %}
  {{ pageTitle(form, "groupInterestAllowance.title") }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% call formHelper(form, routes.controllers.GroupInterestAllowanceController.onSubmit(mode).url) %}

            {{ subheading("section.aboutReturn") }}

            {{ inputNumber(form, "value", "value", "groupInterestAllowance.label", asHeading = true, classes = "govuk-label--xl") }}

            {{ button("site.saveAndContinue") }}

        {% endcall %}

      </div>
    </div>

{% endblock %}