{% extends "includes/layout.njk" %}

{% from "govuk/components/button/macro.njk"        import govukButton %}

{% from "components/errorSummary.njk" import errorSummary %}
{% from "components/yesNoRadio.njk" import yesNoRadio %}
{% from "components/pageTitle.njk" import pageTitle %}

{% block pageTitle %}
  {{ pageTitle(form, "helloWorldYesNoNunjucks.title") }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ errorSummary(form) }}

        <form action="" method="post">

          {{ csrf() | safe }}

          {{ yesNoRadio(form, "helloWorldYesNoNunjucks.title", radios) }}

          {{ govukButton({
            text: messages("site.continue")
          }) }}

        </form>

      </div>
    </div>

{% endblock %}