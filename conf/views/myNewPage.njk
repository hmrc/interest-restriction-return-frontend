{% extends "includes/layout.njk" %}

{% from "components/inputCheckboxes.njk" import inputCheckboxes %}
{% from "components/pageTitle.njk" import pageTitle %}
{% from "components/form/macro.njk" import formHelper %}
{% from "components/button/macro.njk" import button %}

{% block pageTitle %}
  {{ pageTitle(form, "myNewPage.title") }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% call formHelper(form, routes.controllers.MyNewPageController.onSubmit(mode).url) %}

          {{ inputCheckboxes(form, "myNewPage.heading", checkboxes, errorMessage) }}

          {{ button() }}

        {% endcall %}

      </div>
    </div>

{% endblock %}