{% extends "govuk/template.njk" %}
{%- set assetPath = "/assets/lib/govuk-frontend/govuk/assets" -%}

{% from "components/phaseBanner/macro.njk" import phaseBanner %}

{% block head %}
  {% include "includes/head.njk" %}
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: messages('service.name'),
    serviceUrl: "/",
    containerClasses: "govuk-width-container",
    assetsPath: "/assets"
  }) }}
{% endblock %}

{% block beforeContent %}

  {{ phaseBanner("alpha") }}

  {{ govukBackLink({
    href: "#",
    text: "Back",
    attributes: {
        id: "back-link"
    }
  }) }}

{% endblock %}

{% block bodyEnd %}
  {% block scripts %}
    {% include "includes/scripts.njk" %}
  {% endblock %}
{% endblock %}