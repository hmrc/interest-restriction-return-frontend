{% extends "includes/layout.njk" %}

{% from "components/pageTitle.njk" import pageTitle %}
{% from "components/h1/macro.njk" import h1 %}
{% from "components/link/macro.njk" import link %}

{% block pageTitle %}
  {{ pageTitle(form, "savedReturn.title") }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ h1("savedReturn.heading") }}

        <p class="govuk-body">
          {{ messages("savedReturn.p1") }}
        </p>

        <div class="govuk-inset-text">
          {{ messages("savedReturn.indent") }}
        </div>

        <p class="govuk-body">
          {{ messages("savedReturn.p2") }}
        </p>
        <ul class="govuk-list govuk-list--bullet">
          <li>
            {{ link("link", "saveReturn.bullet1") }}
          </li>
          <li>
            {{ link("link", "saveReturn.bullet2") }}
          </li>
        </ul>

      </div>
    </div>

{% endblock %}